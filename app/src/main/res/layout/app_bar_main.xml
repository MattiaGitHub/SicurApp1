<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SicurApp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SicurApp.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/red"
        app:tint="@color/white"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/ic_baseline_local_hospital_24" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/red"
        app:tint="@color/white"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/ic_baseline_local_police_24" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/red"
        app:tint="@color/white"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/ic_baseline_local_fire_department_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>